{
  "_id": "admin.instance.property",
  "_type": "page.admin.property",
  "_template": "admin-page.property",
  "url": "/instance/:_id/:parentProperty?/:property",
  "heading": "{instanceTitle} {parentPropertyTitle, select, undefined{} other{*{parentPropertyTitle}*}}",
  "components": [
    {
      "_id": "admin.instance.property--source",
      "_type": "warning",
      "html": "This instance is defined in {instanceSource}. Any changes will be saved to a new copy in your servicesâ€™s metadata",
      "show": {
        "identifier": "instanceSource",
        "operator": "defined"
      }
    },
    {
      "_id": "admin.instance.property--hidden",
      "name": "hiddenValue",
      "_type": "hidden",
      "show": {
        "identifier": "hiddenValue",
        "operator": "defined"
      }
    },
    {
      "_id": "admin.instance.property--value",
      "name": "value",
      "_type": "text",
      "label": "{propertyTitle}",
      "hint": "{propertyDescription}",
      "xhint": "{inheritedValue}"
    },
    {
      "_id": "admin.instance.property--add",
      "_type": "button",
      "html": "Add {propertySingular}",
      "name": "<addUrl>",
      "classes": "fb-action-xsecondary fb-action-add",
      "show": {
        "identifier": "addValue",
        "operator": "defined"
      }
    },
    {
      "_id": "admin.instance.property--button",
      "_type": "button",
      "classes": "fb-action-update",
      "html": "Update {propertyTitle}"
    },
    {
      "_id": "admin.instance.property--form--delete",
      "_type": "form",
      "method": "post",
      "components": [
        {
          "_id": "admin.instance.property--delete",
          "_type": "button",
          "name": "delete-property",
          "value": "yes",
          "html": "Delete {propertyTitle}",
          "classes": "fb-action--delete",
          "show": {
            "identifier": "deletable",
            "operator": "defined"
          }
        }
      ]
    }
  ]
}
